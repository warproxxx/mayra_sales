Now use the certificate 

Modify users table to make login register and connection with fb/google work.

Register apps.

<IfModule mod_ssl.c>
<VirtualHost *:443>
        ServerName easeads.com
        ServerAlias www.easeads.com
        ServerAdmin webmaster@localhost
        DocumentRoot /home/ubuntu/EaseAds/ads/
        ErrorLog ${APACHE_LOG_DIR}/error.log
        CustomLog ${APACHE_LOG_DIR}/access.log combined


Include /etc/letsencrypt/options-ssl-apache.conf
SSLCertificateFile /etc/letsencrypt/live/easeads.com/fullchain.pem
SSLCertificateKeyFile /etc/letsencrypt/live/easeads.com/privkey.pem
</VirtualHost>
</IfModule>
