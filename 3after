sudo service apache2 restart
sudo apt install mysql-server

mysql -u root -p
CREATE USER 'mayra_user'@'localhost' IDENTIFIED BY '@dminP@ssword';
CREATE DATABASE mayra;
GRANT ALL ON mayra.* TO 'mayra_user'@'localhost';

sudo apt-get install phpmyadmin

sudo nano /etc/apache2/sites-available/mayrasales.com.conf 
<VirtualHost *:80>
        ServerAdmin webmaster@localhost
	ServerName mayrasales.com
	ServerAlias www.mayrasales.com
        DocumentRoot /home/warproxxx/Desktop/Projects/mayra_sales/src
        ErrorLog ${APACHE_LOG_DIR}/error.log
        CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost> 
sudo a2ensite mayrasales.com.conf

sudo nano /etc/apache2/apache2.conf
<Directory /home/ubuntu/mayra_sales/src>
        Options Indexes FollowSymLinks
        AllowOverride All
        Order allow,deny
        Allow from all 
        Require all granted
</Directory>

sudo add-apt-repository universe
sudo add-apt-repository -y ppa:certbot/certbot
sudo apt-get update

sudo service nginx stop
sudo apt-get install certbot python-certbot-apache
sudo certbot --apache --preferred-challenges http -d mayrasales.com
